<div class="row">
  <div class="col s12">
    <h1 class="center-align white-text">🍔🍔   - BURGERS -   🍔🍔</h1>
  </div>
</div>

<div class="row">
  <div class="col s4">
    <div class="card">
      <div class="card-image">
        <img src="https://bit.ly/2ZM5k0f">
        <span class="card-title"><h4>Add a burger</h4></span>
      </div>
      <div class="card-content">
        <form class="create-form" autocomplete="off">

          <div class="form-group">
            <label for="bu">Burger:</label>
            <input type="text" id="bu" name="name">
          </div>

          <div class="form-group">
            <label for="devoured">Devoured?</label><br>
              <p>
                <label>
                  <input name="devoured" type="radio" value="0" checked />
                  <span>Not Devoured</span>
                </label>
              </p>
              <p>
                <label>
                  <input name="devoured" type="radio" value="1" />
                  <span>Devoured</span>
                </label>
              </p>
          </div>

          <button class="btn" type="submit">Add Burger</button>
        </form>
      </div>
    </div>
  </div>
  <div class="col s8">
    <div class="row">
      <div class="col s12">
        <div class="card">
          <div class="card-content">
            <span class="card-title">Undevoured Burgs</span>  
            <ul class="collection">
              {{#each burgers}}
                {{#unless devoured}}
                  {{> burgers/burger-block devoured=false newdevour=true}}
                {{/unless}}
              {{/each}}
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col s12">
        <div class="card">
          <div class="card-content">
            <span class="card-title">Devoured Burgs</span>  
            <ul class="collection">
              {{#each burgers}}
                {{#if devoured}}
                  {{> burgers/burger-block devoured=true newdevour=false}}
                {{/if}}
              {{/each}}
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

